<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/background"
    tools:context="edu.temple.bitcoindashboard.InfoFragments.CurrentPriceFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:layout_gravity="center"
        android:layout_alignBaseline="@+id/current_price"
        android:layout_alignBottom="@+id/current_price"
        android:layout_toEndOf="@+id/current_price"
        android:layout_marginStart="38dp"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/current_price"
        android:id="@+id/current_price"
        android:layout_marginBottom="107dp"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bitcoin_logo_full"
        android:id="@+id/imageView4"
        android:background="@color/background"
        android:layout_marginStart="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/current_price"
        android:layout_marginTop="118dp" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_price_progress"
        android:layout_below="@+id/price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />


</RelativeLayout>
