<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/background"
    tools:context="edu.temple.bitcoindashboard.InfoFragments.CurrentPriceFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bitcoin_logo_full"
        android:id="@+id/imageView4"
        android:background="@color/background"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:alpha=".4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:layout_gravity="center"
        android:textSize="23sp"
        android:layout_marginEnd="12dp"
        android:layout_alignBaseline="@+id/current_price"
        android:layout_alignBottom="@+id/current_price"
        android:layout_alignEnd="@+id/imageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/current_price"
        android:id="@+id/current_price"
        android:textSize="23sp"
        android:layout_marginTop="93dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView4" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:id="@+id/current_price_progress" />


</RelativeLayout>
